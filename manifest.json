{
  "manifest_version": 3,
  "name": "PR Preview",
  "version": "1.1.0",
  "description": "Preview PR builds in Collibra Instance",
  "icons": {
    "16": "pr_preview.ico",
    "48": "pr_preview.png",
    "128": "pr_preview.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://github.com/collibra/frontend/*",
    "https://*.collibra.dev/*",
    "https://*.collibra-ops.com/*",
    "https://static.collibra.dev/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/collibra/frontend/pull/*"],
      "js": ["content-pr.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.collibra.dev/*", "https://*.collibra-ops.com/*"],
      "js": ["content-infra.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  }
}
